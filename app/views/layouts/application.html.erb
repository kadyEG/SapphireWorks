<!DOCTYPE HTML>
<html>
  <head>
    <title>SapphireWorks</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="SapphireWorks" />
    <script type="application/x-javascript">
      addEventListener("load", function() {
      	setTimeout(hideURLbar, 0);
      }, false);

      function hideURLbar() {
      	window.scrollTo(0, 1);
      }
    </script>
    <!----webfonts---->
    <link href='https://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,300italic,400italic,600italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <!--/script-->
    <script type="text/javascript">
      jQuery(document).ready(function($) {
      	$(".scroll").click(function(event) {
      		event.preventDefault();
      		$('html,body').animate({
      			scrollTop: $(this.hash).offset().top
      		}, 900);
      	});
      });
    </script>
    <!---->
  </head>
  <body>
    <!---strat-banner---->
    <div class="banner">
      <div class="header">
        <div class="container">
          <div class="logo">
            <a href="/">
              <img src="http://placehold.it/150x50&text=Logo" />
            </a>
          </div>
          <!---start-top-nav---->
          <div class="top-menu">
            <span class="menu"> </span>
            <ul>
              <!-- Link_to the index page for the user -->
              <li class="active">
                <%= link_to 'HOME', :root  %>
              </li>
              <!-- Checking if user is logged in then add logout tab , and vice-versa -->
              <% if user_signed_in? %>
                <li>
                  <%= link_to 'Settings', edit_user_registration_path %>
                </li>

                <li>
                  <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to 'Login', new_user_session_path %>
                </li>
              <% end %>
              <!-- TODO Add login ,settings and team page -->
              <div class="clearfix"> </div>
            </ul>
          </div>
          <div class="clearfix"></div>
          <script>
            $("span.menu").click(function() {
            	$(".top-menu ul").slideToggle("slow", function() {});
            });
          </script>
          <!---//End-top-nav---->
        </div>
      </div>
      <div class="container">
        <div class="banner-head">
          <h1>SapphireWorks</h1>
          <h2>Producing clean and shiny code</h2>
        </div>
        <div class="banner-links">
          <ul>
            <li>
              <%= link_to 'Posts', posts_path %>
            </li>
            <li>
              <%= link_to 'Team', profiles_index_path %>
            </li>
            <div class="clearfix"></div>
          </ul>
        </div>
      </div>
    </div>
    <!---//End-banner---->
    <div class="content">
      <div class="container">
        <div class="content-grids">
          <!-- TODO Those alerts should be passed to the bootstrap growl -->
          <p ><%= notice %></p>
          <p ><%= alert %></p>
          <%= yield %>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <!--footer-->
    <div class="footer">
      <div class="container">
        <div class="col-md-4 footer-media">
          <h3>FOLLOW US ON....</h3>
          <div class="social-icons">
            <a href="#">
              <span class="fb"> </span>
            </a>
            <a href="#">
              <span class="twt"> </span>
            </a>
            <a href="#">
              <span class="in"> </span>
            </a>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
    <!---footer/-->
    <div class="copywrite">
      <div class="container">
        <p>Copyrights &copy; 2015 SW All rights reserved | Template by <a href="http://w3layouts.com/">W3layouts</a>
        </p>
      </div>
    </div>
    <!---->
    <script type="text/javascript">
      $(document).ready(function() {
      	/*
      	var defaults = {
      	containerID: 'toTop', // fading element id
      	containerHoverID: 'toTopHover', // fading element hover id
      	scrollSpeed: 1200,
      	easingType: 'linear'
      	};
      	*/
      	$().UItoTop({
      		easingType: 'easeOutQuart'
      	});
      });
    </script>
    <a href="#to-top" id="toTop" style="display: block;">
      <span id="toTopHover" style="opacity: 1;"> </span>
    </a>
  </body>
</html>
