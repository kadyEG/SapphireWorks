<h1>New Post</h1>

<% if user_signed_in? %>
<% if current_user.authorized == true %>

<%= form_for :post, url: posts_path do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %> 
  <p>
    <%= f.label :tag %><br>
    <%= f.text_field :title %>
  </p>
  <p> <% current_user.id %></p>
  <p>
    <%= f.label :post %><br>
    <%= f.text_area :body %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
  
<% end %>
 <% else %>
 <%end%> 
 <% if user_signed_in? %>
 <p><strong> YOU ARE NOT AUTHORIZED BY THE ADMIN TO MAKE A NEW POST</strong></p>
 <%= link_to 'Back', posts_path(@post) %> 
 <%end %>
 <%else%>
  <%= link_to 'Login', new_user_session_path %>
 <%= link_to 'Back', posts_path(@post) %> 
 <%end%>
 


