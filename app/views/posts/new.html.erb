<h1>Write a new post</h1>

<% if user_signed_in? %>
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :tag %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :post %><br>
    <%= f.text_area :body, :class => "tinymce", :rows => 40, :cols => 120 %>
    <%= tinymce %>
  </p>
  <p>
    <%= f.label :videourl %><br>
    <%= f.text_field :videourl %>
  <p>
    <%= f.submit %>
  </p>

<% end %>
 <% else %>
  <p>You are not signed in.</p>
  <%= link_to 'Login', new_user_session_path %>

<% end %>
 <%= link_to 'Back', posts_path(@post) %>
