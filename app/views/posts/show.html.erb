<% if user_signed_in? %>
<p>
  <strong>Tag:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.body %>
  
</p>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Comment by:</strong>
    <%= comment.user_id %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>



<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
   <%= f.hidden_field :user_id, :value => current_user.email %> 
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

 

<%= link_to 'Back', posts_path(@post) %> 
<% else %> 
  <p>You are not signed in.</p>
  <%= link_to 'Login', new_user_session_path %>
<%end%>
