<h1>Home</h1>
  <% if user_signed_in? %>
  <%= link_to 'New post', new_post_path %>
  
<table>
  <tr>
    <th>Tag</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body%></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>

<% else %>
  <p>You are not signed in.</p>
  <%= link_to 'Login', new_user_session_path %>
  <%end%>
